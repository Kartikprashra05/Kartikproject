<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#fff"

    tools:context=".AnotherActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        app:title="                  TIMES NEWS"
        app:logo="@drawable/back"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEF1F3">
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="match_parent"
android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="center">




    <TextView
        android:id="@+id/Titletvdetail"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_below="@+id/toolbar"
        android:text="Title"

        android:layout_marginLeft="8dp"
        android:textSize="18sp"

        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        tools:ignore="NotSibling" />


    <ImageView
        android:id="@+id/imageViewtvdetail"
        android:layout_width="180dp"
        android:layout_centerHorizontal="true"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/Titletvdetail"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/destvdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:textStyle="italic"
     android:layout_below="@+id/imageViewtvdetail"
        android:text="Description"
        android:textSize="14sp"

android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
      android:textColor="#656A6A"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"/>

</RelativeLayout>
</LinearLayout>
</LinearLayout>